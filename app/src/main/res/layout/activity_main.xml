<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


        <!-- FIRST ROW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal" >
        <!-- first column -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/color1"
            android:orientation="vertical" >
        <ImageView
            android:id="@+id/imageView_laugh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/buttom_padding_v"
            android:layout_gravity="center_horizontal"

            android:layout_weight="1.0"
             />
            <TextView
                android:id="@+id/text_laugh"
                android:text=""
                android:background="@color/oscurecer"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="@dimen/dark_padding_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- second column -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/color2"
            android:orientation="vertical" >
        <ImageView
            android:id="@+id/imageView_yeah"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/buttom_padding_v"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            />
            <TextView
                android:id="@+id/text_yeah"
                android:text=""
                android:background="@color/oscurecer"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="@dimen/dark_padding_v"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <!-- SECOND ROW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"

        android:orientation="horizontal" >
        <!-- first column -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/color3"
            android:orientation="vertical" >
        <ImageView
            android:id="@+id/imageView_applause"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/buttom_padding_v"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            />
        <TextView
            android:id="@+id/text_applause"
            android:text=""
            android:background="@color/oscurecer"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="@dimen/dark_padding_v"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <!-- second column -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/color4"
            android:orientation="vertical" >
        <ImageView
            android:id="@+id/imageView_boo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/buttom_padding_v"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            />
    <TextView
        android:id="@+id/text_boo"
        android:text=""
        android:background="@color/oscurecer"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="@dimen/dark_padding_v"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

    </LinearLayout>

    <!-- THIRD ROW -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <!-- second column -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/color5"
            android:orientation="vertical" >
        <ImageView
            android:id="@+id/imageView_hmm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/buttom_padding_v"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            />
        <TextView
            android:id="@+id/text_hmm"
            android:text=""
            android:background="@color/oscurecer"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="@dimen/dark_padding_v"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <!-- second column -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/color6"
            android:orientation="vertical" >
        <ImageView
            android:id="@+id/imageView_fail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/buttom_padding_v"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            />
            <TextView
            android:id="@+id/text_fail"
            android:text=""
            android:background="@color/oscurecer"
            android:textColor="@android:color/white"
            android:gravity="center"
                android:padding="@dimen/dark_padding_v"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    </LinearLayout>


